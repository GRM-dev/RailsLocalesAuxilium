<Page x:Class="RailsLocalesAuxilium.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RailsLocalesAuxilium"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance local:StartPage}" 
      Title="StartPage">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Margin="0,25,0,0">
            <Button Content="Load new Project" FontSize="21.333" Command="{Binding OpenNewProjectCommand}" HorizontalAlignment="Center"/>
            <Label Content="or" HorizontalAlignment="Center" FontSize="21.333"/>
            <Label Content="Select Last Loaded Project" HorizontalAlignment="Center" FontSize="21.333" />
        </StackPanel>
        <WrapPanel x:Name="ProjectsPanel"/>
    </DockPanel>
</Page>
